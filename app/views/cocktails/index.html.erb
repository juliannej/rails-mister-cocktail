


<div class="container">
<div class="row">
<% @cocktails.each do |cocktail|%>
    <%= link_to(cocktail) do %>

          <div class="col-md-4">
            <div class="card">
              <div class="card-description">
                <h2> <%= cocktail.name %></h2>
                <p><% cocktail.ingredients.each do |ingredient| %>
                      <% if ingredient == cocktail.ingredients.last %>
                        <%= ingredient.name %>
                      <% else %>
                        <%= ingredient.name + ", " %>
                      <% end %>
                    <% end %>
                </p>
              </div>
            </div>
          </div>

    <% end %>


<% end %>
</div>
</div>
