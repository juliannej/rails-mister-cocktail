
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <br>
      <ul>

        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to 'x', cocktail_dose_path(@cocktail, dose), method: :delete, class: "text-danger" %>
        </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>


<br>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-1">
      <p> Add a new ingredient<p>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.error_notification %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all, prompt: 'Which ingredient?'  %>
        <%= f.button :submit, "add an ingredient to cocktail", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
